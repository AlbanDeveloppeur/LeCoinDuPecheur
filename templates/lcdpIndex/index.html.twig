    <section class="menu" id="menu">
        <div class="content">
            <div class="title" id="titleHead">
                <h2>Les plats du chef !</h2>
                <p>Retrouver ci-dessous les recettes du chef</p>
            </div>
        {% for recette in recettes %}
            <div class="box">
                <div class="imgBx">
                    <a href="{{ path('afficher_recette',{'id' : recette.id}) }}"><img src="{{ asset('image/' ~recette.photo) }}" alt=""></a>
                </div>
                <div class="text">
                    <a href="{{ path('afficher_recette',{'id' : recette.id}) }}"><h3>{{ recette.nom }}</h3></a>
                </div>
            </div>
        {% endfor %}
        </div>
        <div class="title"><a href="{{ path("recettes") }}" class="btn">Toutes les recettes</a></div>
    </section>

    <section class="product" id="product">
        <div class="content">
            <div class="title" id="titleHead">
                <h2>Les producteurs</h2>
                <p>Renseignez vous sur les producteurs locaux avec qui je travail.</p>
            </div>
        {% for producteur in producteurs %}
            <div class="box">
                <div class="imgBx">
                    <a href="{{ path('afficher_producteur',{'id' : producteur.id}) }}"><img src="{{ asset('image/' ~producteur.photo) }}" alt=""></a>
                </div>
                <div class="text">
                    <a href="{{ path('afficher_producteur',{'id' : producteur.id}) }}"><h3>{{ producteur.nom }} {{ producteur.prenom}} </h3></a>
                </div>
            </div>
        {% endfor %}
        <div class="title"><a href="{{ path("producteurs") }}" class="btn">TOUS LES PRODUCTEURS</a></div>
        </div>
    </section>

    <!-- NewLetters -->
    <section class="newletters">
