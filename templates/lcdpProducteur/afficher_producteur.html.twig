{% block body %}

    <section class="banner" id="banner">
        <div class="content">
            <h2>{{ producteur.nom }} {{ producteur.prenom }}</h2>
        </div>
    </section>

    <article>
        <div id="div-tout">
            <div id="div-gauche">
                <img src="{{ asset('image/' ~producteur.photo)}}" alt="" id="img_producteur">
            </div>
            <div id="div-droite">
                <h1>{{ producteur.metier }}</h1>
                <h2>{{ producteur.nom }} {{ producteur.prenom }}</h2>
            </div>
        </div>
        <p id="p_1">{{ producteur.description }}</p>
        <img src="{{ asset('image/' ~producteur.illustration1) }}" alt="">
        <p>{{ producteur.description }}</p>
        <img src="{{ asset('image/' ~producteur.illustration2) }}" alt="Photographie d'une poissonnerie">
        <p>{{ producteur.description }}</p>
    </article>

    <script>
        window.addEventListener("scroll", function() {
            const header = document.querySelector('header')
            header.classList.toggle("sticky", window.scrollY > 0)
        })
    
        function toggleMenu() {
            const menuToggle = document.querySelector('.menuToggle')
            const navigation = document.querySelector('.navigation')
            menuToggle.classList.toggle('active')
            navigation.classList.toggle('active')
        }
    </script>

